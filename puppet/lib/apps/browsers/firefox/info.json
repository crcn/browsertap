{
	"check": {
		"if": { "name": "firefox" },
		"thenRun": [
			{
				"set": {
					"cache.directory": "C:/Users/Administrator/AppData/Local/Mozilla",
					"process.names": ["firefox*"],
					"process.cannotRunWith": ["firefox"],
					"window.classes": [""]
				}
			},
			{
				"check": {
					"if": { "version": {"$lte":12}},
					"thenRun": {
						"set": {
							"padding.top": 87
						}
					}
				}
			},
			{
				"check": {
					"if": { "version": {"$lt":3.6}},
					"thenRun": {
						"set": {
							"padding.top": 137
						}
					}
				}
			},
			{
				"check": {
					"if": { "version": {"$lt":3}},
					"thenRun": {
						"set": {
							"padding.top": 106
						}
					}
				}
			}
		]
	}
}