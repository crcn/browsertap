{>minimal-layout/}

{<scripts}
<script type="text/javascript">
	mixpanel.track("Reset Password Page Visit")
</script>
{/scripts}

{<content}
<h1>Reset Password</h1>
{#errors}
	{message}
{/errors}
<form method="POST" action="/reset_password?token={token}">
	<label>Password: <input type="password" name="password"></input></label> <br />
	<label>Repeat Password: <input type="password" name="password2"></input></label> <br />
	<input type="submit" value="Reset Password"></input>
</form>
{/content}
