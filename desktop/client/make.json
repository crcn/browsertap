[
	{
		"exec": "rm -rf ./lib"
	},
	{
		"directory": "./src",
		"find": {
			"make\\.(\\w+)\\.json": {
				"currentPlatform": "<%-file.match(/make\\.(\\w+)\\.json/)[1] %>",
				"task": [
					"merge:<%-currentPlatform %>",
					{
						"namespace": "<%-currentPlatform %>",
						"cwd": "./lib/<%-currentPlatform %>",
						"load": "./lib/<%-currentPlatform %>/make.<%-currentPlatform %>.json"
					}
				]
			}
		}
	}
]