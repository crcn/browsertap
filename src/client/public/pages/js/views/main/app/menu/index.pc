<div class="app-menu app-menu-{{position}}">

  <a href="#" data-bind="{{ onClick: nextPosition(), show: position == 1 || position == 2 }}">
    {{ position == 2 ? 'left' : 'up' }}
  </a>

  {{label}}

  <a href="#" data-bind="{{ onClick: nextPosition(), show: position == 0 || position == 3 }}">
    {{ position == 0 ? 'right' : 'down' }}
  </a>
</div>